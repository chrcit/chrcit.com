---
import { Image } from "astro:assets";
import ProfileImage from "../images/home-profile.jpg";
import SocialLinks from "./SocialLinks.astro";
---

<header
  class="flex justify-between w-full flex-col md:flex-row items-center gap-y-5 lg:max-w-4xl xl:max-w-5xl px-3 mx-auto py-5"
>
  <a href="/" class="flex flex-row gap-2 items-center">
    <Image
      transition:name="profile-image"
      class="w-[75px] md:w-[100px] h-auto"
      style={{
        clipPath: "polygon(25% 0%, 100% 0%, 75% 100%, 0% 100%)",
      }}
      densities={[1, 2, 3]}
      width={200}
      src={ProfileImage}
      alt="Image of Christian Cito, a 26 year old white man. I'm wearing a loose blue shirt and am looking to the side."
    />
    <div class="flex flex-col gap-3">
      <h1
        transition:name="header-logo-title"
        class="text-3xl font-serif font-bold italic"
      >
        chrcit.com
      </h1>
    </div>
  </a>

  <nav transition:name="header-nav">
    <ul class="flex flex-row gap-1">
      {
        [
          {
            name: "/articles",
            href: "/articles",
          },
          { name: "/projects", href: "/projects" },
          { name: "/books", href: "/books" },
          { name: "/uses", href: "/uses" },
          { name: "/now", href: "/now" },
        ].map((link) => (
          <li class="px-2">
            <a
              class="hover:underline underline-offset-2 cursor-auto"
              href={link.href}
            >
              {link.name}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
