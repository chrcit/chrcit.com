---
import { SocialType, socials } from "../data/socials";
import SocialIcon from "../components/SocialIcon.astro";

interface SocialLinks {
  size?: string;
  align?: "left" | "center" | "right";
}

const { size, align } = Astro.props;

const socialLinks: {
  type: SocialType;
  href: string;
}[] = [
  { type: "twitter", href: socials.twitter },
  { type: "github", href: socials.github },
  {
    type: "linkedin",
    href: socials.linkedin,
  },
  {
    type: "instagram",
    href: socials.instagram,
  },
  {
    type: "twitch",
    href: socials.twitch,
  },
  {
    type: "youtube",
    href: socials.youtube,
  },
];
---

<ul
  style={{
    justifyContent: align ?? "center",
  }}
  class="flex not-prose flex-row items-center gap-1 flex-wrap"
>
  {
    socialLinks.map((link) => (
      <li class="p-2">
        <a
          class="cursor-pointer"
          href={link.href}
          title={`Link to my ${link.type}`}
        >
          <SocialIcon size={size ?? "16"} type={link.type} />
        </a>
      </li>
    ))
  }
</ul>
