---
import { SocialType, socials } from "../data/socials";
import SocialIcon from "../components/SocialIcon.astro";

const socialLinks: {
  type: SocialType;
  href: string;
}[] = [
  { type: "twitter", href: socials.twitter },
  { type: "github", href: socials.github },
  {
    type: "linkedin",
    href: socials.linkedin,
  },
  {
    type: "instagram",
    href: socials.instagram,
  },
  {
    type: "twitch",
    href: socials.twitch,
  },
  {
    type: "youtube",
    href: socials.youtube,
  },
];
---

<footer class="py-5 flex flex-col gap-5">
  <div
    class="flex md:flex-row w-full flex-col items-center justify-between max-w-4xl mx-auto"
  >
    <nav>
      <ul class="flex flex-row flex-wrap">
        {
          socialLinks.map((link) => (
            <li class="px-2">
              <a
                class="hover:underline cursor-pointer underline-offset-2"
                href={link.href}
                title={`Link to my ${link.type}`}
              >
                <SocialIcon size="16" type={link.type} />
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
    <nav>
      <ul class="flex flex-row gap-2 flex-wrap">
        {
          [
            { name: "Privacy Policy", href: "/privacy-policy" },
            { name: "Imprint", href: "/imprint" },
          ].map((link) => (
            <li class="px-2">
              <a
                class="hover:underline underline-offset-2 cursor-auto"
                href={link.href}
              >
                {link.name}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
  <p class="text-center">
    <a href="/colophon"> made with ðŸ–¤ by Christian Cito</a>
  </p>
</footer>
