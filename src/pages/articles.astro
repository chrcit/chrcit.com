---
import { getCollection } from "astro:content";
import RootLayout from "../layouts/RootLayout.astro";
import { Image } from "astro:assets";
import ReadMoreButton from "../components/ReadMoreButton.astro";
import ListHeader from "../components/ListHeader.astro";

const articles = await getCollection("articles");
---

<RootLayout title={"Books"}>
  <section class="flex flex-col gap-5">
    <ListHeader title="Articles" />
    <div>
      {
        articles.map((article) => (
          <a class="group" href={`/articles/${article.slug}`}>
            <article class="flex flex-col md:flex-row items-end gap-10">
              {article.data.image && (
                <Image
                  densities={[1, 2, 3]}
                  width={450}
                  transition:name={`article-${article.id}-image`}
                  class="w-full max-w-[450px]"
                  src={article.data.image}
                  alt={article.data.title}
                />
              )}
              <div class="px-4 py-5  space-y-3">
                <h2
                  transition:name={`article-${article.id}-title`}
                  class="text-5xl font-serif font-semibold"
                >
                  {article.data.title}
                </h2>
                <p transition:name={`article-${article.id}-description`}>
                  {article.data.description}
                </p>
                <ReadMoreButton iconSize="16" />
              </div>
            </article>
          </a>
        ))
      }
    </div>
  </section>
</RootLayout>
